PROGRAM factorial

// define a procedure to calculate factorial
PROC factorial(FLOAT Fnum)
    FLOAT Ffact = 1.0;
    WHILE GF Fnum 0.0 
    DO
       Ffact = Ffact * Fnum;
       Fnum = Fnum - 1.0;
    ENDWHILE
    PRINT(Ffact);
ENDPROC

MAIN
    // call the factorial procedure
    FLOAT Fnum = 5.0;
    PRINT(Fnum);
    factorial(Fnum);
ENDMAIN